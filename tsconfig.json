{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES2018"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
